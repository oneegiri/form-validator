{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": { //https://eslint.org/docs/rules/
        "eqeqeq": "off",
        "curly": "error", // [off, warn, error]
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ]
    },
    "plugins": ["html"],
    "settings": {
        "html/html-extensions": [
            ".html",
            ".tpl",
            ".php"
        ] // consider .html, .php and .tpl files as HTML
    },
    "globals": {
        "jQuery": "readonly",
        "$": "readonly"
    }
}